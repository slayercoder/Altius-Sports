extends ../layouts/default
block content
        head
            title Search Results	
        .container.search
            div
                span <b> Your Search results
                span.result<b> Number of results found:
                    span=Product_contents.length

            if Product_contents.length
                each product_content in Product_contents


                    a(href=product_content.page_url)=product_content.page_name
                    p=product_content.title
                    p=product_content.content.first


    
