extends ../layouts/default

block content
	if Basems.length
		each Basem in Basems
			head
				title  Altius | Products | Other Products
			div
				img(src=Basem.image.first,alt="Base Systems",width="100%")
			.container
				.breadcram
					<a href="/">Home</a>
					|	 &gt; Products  &gt; Base Systems
			
